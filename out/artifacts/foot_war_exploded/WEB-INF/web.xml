<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>SingUp</servlet-name>
        <servlet-class>servlets.SingUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListeRencontre</servlet-name>
        <servlet-class>servlets.ListeRencontre</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Weather</servlet-name>
        <servlet-class>servlets.Weather</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailRencontre</servlet-name>
        <servlet-class>servlets.DetailRencontre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StadeCommentSubmit</servlet-name>
        <servlet-class>servlets.StadeCommentSubmit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StadeCommentSubmit</servlet-name>
        <url-pattern>/stadeCommentSubmit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingUp</servlet-name>
        <url-pattern>/singup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeRencontre</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Weather</servlet-name>
        <url-pattern>/weather</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailRencontre</servlet-name>
        <url-pattern>/detailRencontre</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>init.Init</listener-class>
    </listener>
</web-app>